        <shape android:padding="10dp">
            <stroke android:width="2dp" android:color="#c5c5c5" />
            <solid android:color="#f9f9f9" />
            <stroke android:width="1dp" android:color="@color/colorPrimary" />
            <corners android:bottomLeftRadius="5dp" android:bottomRightRadius="5dp" android:topLeftRadius="5dp" android:topRightRadius="5dp" />
        </shape>
    </item>
    <item android:state_enabled="true">
        <shape android:padding="10dp">
            <stroke android:width="1dp" android:color="#c5c5c5" />
            <solid android:color="#f9f9f9" />
            <corners android:bottomLeftRadius="5dp" android:bottomRightRadius="5dp" android:topLeftRadius="5dp" android:topRightRadius="5dp" />
        </shape>
    </item>
</selector>